<!-- app/views/restaurants/index.html.erb -->
<h1>Cocktails 🥂</h1>

<%= cl_image_tag("cocktail_pic", width: 400, height: 300, crop: :fill) %>
<%= cl_image_tag("kht1mnnpls5kfc2mwbtw", width: 150, height: 150, crop: :thumb, gravity: :face) %>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-primary" %></li>

    <% if cocktail.photo.attached? %>
      <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.photo.key) %>);">
    <% else %>
        <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= asset_path 'logo.png' %>);">
    <% end %>

    <br>
  <% end %>
</ul>

<p>➡️<%= link_to "+ add a new cocktail", new_cocktail_path %></p>

