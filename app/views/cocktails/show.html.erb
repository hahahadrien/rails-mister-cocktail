<!-- app/views/cocktail/show.html.erb -->
<h2>🍸 <%= @cocktail.name %></h2>


<ul class="list-group">
  <p> 📃 Follow the recipe:
    <br>
    <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> 🍒 <%= dose.ingredient.name %></li>
    <% end %>
  </p>
  </ul>

<br>
<p>↩️<%= link_to "Return to all cocktails", cocktails_path %></p>
<br>
<p>➡️<%= link_to "+ add a new dose", new_cocktail_dose_path(@cocktail) %></p>
