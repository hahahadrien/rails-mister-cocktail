<h1>Here is your very delicious... 😋</h1>

<!-- app/views/cocktail/show.html.erb -->
<h2>🍸 <%= @cocktail.name %></h2>

<%#= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<%#= cl_image_tag "zq6gtl8rk2xfgsvplcdu", height: 300, width: 400, crop: :fill %>

<ul class="list-group">
  <p> 📃 Follow the recipe:
    <br>
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.description %> 🍒 <%= dose.ingredient.name %></li>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <% end %>
  <% end %>
  </p>
  </ul>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %>

<br>
<p>↩️<%= link_to "Return to all cocktails", cocktails_path %></p>
